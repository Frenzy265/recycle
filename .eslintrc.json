{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },

  "settings": {
    "react": {
      "version": "latest"
    }
  },

  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12
  },
  "plugins": [],
  "rules": {
    "no-unused-vars": [
      "warn",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": true }
    ],
    "import/no-anonymous-default-export": "off"
  }
}
